{
  "name": "cdk",
  "version": "0.1.0",
  "bin": {
    "cdk": "bin/cdk.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "cdk:lambda:install": "cd ../lambda && npm i && cd ../cdk",
    "deploy": "npm run cdk:lambda:install && cdk deploy --all --require-approval never --outputs-file output.json",
    "synth": "cdk synth"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.147",
    "@types/jest": "^29.5.14",
    "@types/node": "22.13.9",
    "aws-cdk": "2.1002.0",
    "esbuild": "^0.25.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.2"
  },
  "dependencies": {
    "aws-cdk-lib": "2.181.1",
    "constructs": "^10.4.2",
    "source-map-support": "^0.5.21"
  }
}
