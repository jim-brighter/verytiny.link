{
  "name": "cdk",
  "version": "0.1.0",
  "bin": {
    "cdk": "bin/cdk.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "cdk:lambda:install": "cd ../lambda && npm i && cd ../cdk",
    "deploy": "npm run cdk:lambda:install && cdk deploy --require-approval never --outputs-file output.json",
    "synth": "cdk synth"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/jest": "^29.5.14",
    "@types/node": "22.8.7",
    "aws-cdk": "2.165.0",
    "esbuild": "^0.24.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.682.0",
    "@aws-sdk/lib-dynamodb": "^3.685.0",
    "aws-cdk-lib": "2.165.0",
    "constructs": "^10.4.2",
    "source-map-support": "^0.5.21"
  }
}
