{
  "name": "cdk",
  "version": "0.1.0",
  "bin": {
    "cdk": "bin/cdk.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "cdk:lambda:install": "cd ../lambda && npm i && cd ../cdk",
    "cdk:ui:build": "cd ../ui && node build.js && cd ../cdk",
    "cdk:deploy": "cdk deploy --all --require-approval never --outputs-file output.json",
    "deploy": "npm run cdk:ui:build && npm run cdk:lambda:install && npm run cdk:deploy",
    "synth": "npm run cdk:ui:build && npm run cdk:lambda:install && cdk synth"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.148",
    "@types/jest": "^29.5.14",
    "@types/node": "22.13.13",
    "aws-cdk": "2.1005.0",
    "esbuild": "^0.25.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.2"
  },
  "dependencies": {
    "aws-cdk-lib": "2.185.0",
    "constructs": "^10.4.2",
    "source-map-support": "^0.5.21"
  }
}
