{
  "name": "cdk",
  "version": "0.1.0",
  "bin": {
    "cdk": "bin/cdk.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "cdk:lambda:install": "cd ../lambda && npm i && cd ../cdk",
    "deploy": "npm run cdk:lambda:install && cdk deploy --require-approval never --outputs-file output.json"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.122",
    "@types/jest": "^29.5.5",
    "@types/node": "20.8.2",
    "aws-cdk": "2.99.1",
    "esbuild": "^0.19.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "~5.2.2"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.423.0",
    "@aws-sdk/lib-dynamodb": "^3.423.0",
    "aws-cdk-lib": "2.99.1",
    "constructs": "^10.2.70",
    "source-map-support": "^0.5.21"
  }
}
